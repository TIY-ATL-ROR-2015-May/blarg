<%= form_for(@post) do |f| %>
  <div class="form-field">
    <%= f.label "Title:"  %> <br/>
    <%= f.text_field(:title, placeholder: 'my title', size: 40) %>
  </div>

  <div class="form-field">
    <%= f.label "Tags:" %> <br/>
    <%= f.text_field(:tag_names, placeholder: 'tag1, tag2', size: 40) %>
  </div>

  <div class="form-field">
    <%= f.label "Content: "  %> <br/>
    <%= f.text_area(:content, placeholder: 'blog post', cols: 40, rows: 15) %>
  </div>

  <%= f.submit('Save') %>
<% end %>
