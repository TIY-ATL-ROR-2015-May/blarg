<h2>Edit Post</h2>

<%= form_tag('/posts', method: :patch, class: 'post-form') do %>
    <div class="post-input">
      <%= label_tag(:title, "Title: ") %>
      <%= text_field_tag(:title, @post.title, size: 40) %>
    </div>

    <div class="post-input">
      <%= label_tag(:tags, "Tags: ") %>
      <%= text_field_tag(:tags, nil, size: 40) %>
      <!--Why can't I use @post.tags instead of nil?-->
    </div>

    <div class="post-input">
      <%= label_tag(:content, "Content: ") %>
      <br/>
      <%= text_area_tag(:content, @post.content, rows: 40, cols: 80) %>
    </div>



    <br/>
    <%= hidden_field_tag(:id, @post.id) %>
    <div><%= submit_tag 'Save' %></div>
    <% end %>